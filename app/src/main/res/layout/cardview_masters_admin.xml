<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rellay_masters_admin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/masterPhoto"
        android:src="@drawable/common_google_signin_btn_icon_light">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name Surname"
        android:id="@+id/masterNameSurname"
        android:layout_toRightOf="@id/masterPhoto"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:textSize="18sp"
        android:layout_toEndOf="@id/masterPhoto" />

</RelativeLayout>