<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/lay_master_admin_card"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_master_admin_for_list"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rellay_masters_admin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:background="@color/GreyForCard">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/masterPhoto"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/common_google_signin_btn_icon_light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/masterNameSurname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/masterPhoto"
                android:layout_toRightOf="@id/masterPhoto"
                android:text="Name Surname"
                android:textSize="18sp"
                android:textColor="@color/partWhite"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/iv_star_admin"
                app:layout_constraintHorizontal_bias="0.016"
                app:layout_constraintStart_toEndOf="@+id/masterPhoto"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_score_master_admin"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:textSize="17sp"
                android:textColor="@color/partWhite"
                android:textStyle="bold"
                android:textAlignment="gravity"
                android:text="4.6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/iv_star_admin"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_score_master_admin"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/btn_star_big_on" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>