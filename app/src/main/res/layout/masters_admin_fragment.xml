<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_masters_admin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.ui.masters.MastersAdminFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recview_masters"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
    </androidx.recyclerview.widget.RecyclerView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.androidsample.BottomSheetActivity">

        <include layout="@layout/add_master_swipe" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_fab_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:src="@color/common_google_signin_btn_text_dark_default"
            app:layout_anchor="@id/bottom_sheet"
            app:layout_anchorGravity="top|end"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>