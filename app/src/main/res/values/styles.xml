<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBrown</item>
        <item name="colorPrimaryDark">@color/colorBrown</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/andika</item>
        <item name="colorControlNormal">@color/normGrey</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="AppThemeNoAct" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBrown</item>
        <item name="colorPrimaryDark">@color/colorBrown</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/andika</item>
    </style>

    <style name="customRatingBar"
        parent="android:style/Widget.Material.RatingBar.Small">
    </style>

    <style name="CustomAlertDialog"
        parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_bd</item>
    </style>

    <style name="CustomCircleImage">
        <item name="android:windowBackground">@drawable/circle_img</item>
    </style>

    <style name="ForInput">
        <item name="android:windowBackground">@drawable/req_with_color_corners</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/colorBrown</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorBrown</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
    </style>

    <style name="ToolbarWhite">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="OutlinedColor" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorBrown</item>
        <item name="hintTextAppearance">@style/HintText</item>
        <!-- cursor color -->
        <item name="android:colorControlActivated">@color/colorBrown</item>
    </style>

    <style name="HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/colorBrown</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/colorBrown</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/andika</item>
    </style>

</resources>
